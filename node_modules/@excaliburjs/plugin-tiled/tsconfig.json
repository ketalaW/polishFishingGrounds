{
   "compilerOptions": {
      "moduleResolution": "node",
      "module": "ES2015",
      "target": "es2018",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "lib": ["DOM", "DOM.Iterable", "ES2019.Array"],
      "declaration": true,
      "sourceMap": true,
      "paths": {
         "@excalibur-tiled": ["./src/"]
      }
   },
   "include": ["example/**/*.ts", "./src/**/*.ts", "./test/unit/*.spec.ts", "files.d.ts"],
   "exclude": ["./example/**/*.tsx", "./test/integration/*.ts"]
}